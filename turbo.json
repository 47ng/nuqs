{
  "$schema": "https://turbo.build/schema.v2.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "nuqs#build": {
      "outputs": ["dist/**", "size.json"]
    },
    "e2e#build": {
      "outputs": [".next/**", "!.next/cache/**", "cypress/**"],
      "dependsOn": ["^build"],
      "env": ["BASE_PATH", "REACT_COMPILER", "E2E_NO_CACHE_ON_RERUN"]
    },
    "docs#build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"],
      "env": ["VERCEL_ENV", "VERCEL_URL", "VERCEL_PROJECT_PRODUCTION_URL"]
    },
    "nuqs#test": {
      "outputs": ["dist/**", "coverage/**"],
      "dependsOn": ["build"]
    },
    "e2e#test": {
      "dependsOn": ["build"],
      "env": ["BASE_PATH", "REACT_COMPILER", "E2E_NO_CACHE_ON_RERUN"]
    }
  }
}
