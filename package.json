{
  "name": "next-usequerystate-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/next-usequerystate"
  },
  "scripts": {
    "dev": "FORCE_COLOR=3 turbo run dev",
    "build": "FORCE_COLOR=3 turbo run build",
    "test": "FORCE_COLOR=3 turbo run test --filter=next-usequerystate,playground",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.1.0",
    "commitlint": "^18.2.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^22.0.5",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
