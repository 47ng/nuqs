{
  "name": "nuqs",
  "version": "0.0.0-semantically-released",
  "description": "Type-safe search params state manager for Next.js - Like React.useState, but stored in the URL query string",
  "license": "MIT",
  "author": {
    "name": "FranÃ§ois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/47ng/nuqs.git",
    "directory": "packages/nuqs"
  },
  "homepage": "https://nuqs.47ng.com",
  "keywords": [
    "nextjs",
    "router",
    "url",
    "query-string",
    "react-hook",
    "useState",
    "next-usequerystate"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "parsers.d.ts",
    "server.d.ts"
  ],
  "type": "module",
  "sideEffects": true,
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch --external=react",
    "build": "tsup --clean --external=react",
    "postbuild": "size-limit --json > size.json",
    "test": "run-p test:*",
    "test:types": "tsd",
    "test:unit": "vitest run",
    "test:size": "size-limit",
    "prepack": "./scripts/prepack.sh"
  },
  "peerDependencies": {
    "next": ">=13.4 <14.0.2 || ^14.0.3",
    "react": "^18.2.0"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/node": "^20.16.3",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "next": "^14.2.7",
    "npm-run-all": "^4.1.5",
    "react": "rc",
    "react-dom": "rc",
    "size-limit": "^11.1.4",
    "tsafe": "^1.7.2",
    "tsd": "^0.30.7",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "tsd": {
    "directory": "src/tests"
  },
  "size-limit": [
    {
      "name": "Client",
      "path": "dist/index.js",
      "limit": "5 kB",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "Server",
      "path": "dist/server.js",
      "limit": "2 kB",
      "ignore": [
        "react"
      ]
    }
  ]
}
