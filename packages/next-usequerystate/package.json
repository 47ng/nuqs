{
  "name": "next-usequerystate",
  "version": "0.0.0-semantically-released",
  "description": "useQueryState hook for Next.js - Like React.useState, but stored in the URL query string",
  "license": "MIT",
  "author": {
    "name": "FranÃ§ois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/47ng/next-usequerystate.git",
    "directory": "packages/next-usequerystate"
  },
  "homepage": "https://next-usequerystate.vercel.app",
  "keywords": [
    "nextjs",
    "router",
    "url",
    "query-string",
    "react-hook",
    "useState"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "parsers.d.ts"
  ],
  "type": "module",
  "sideEffects": true,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./parsers": {
      "types": "./dist/parsers.d.ts",
      "import": "./dist/parsers.js",
      "require": "./dist/parsers.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --format esm --watch --external=react",
    "build": "tsup --clean --external=react",
    "test": "run-p test:*",
    "test:types": "tsd",
    "test:unit": "vitest run",
    "test:size": "size-limit",
    "prepack": "./scripts/prepack.sh"
  },
  "peerDependencies": {
    "next": ">=13.4 <14.0.2 || ^14.0.3"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@types/node": "^20.9.4",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "next": "14.0.3",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.0.0",
    "tsd": "^0.29.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "tsd": {
    "directory": "src/tests"
  },
  "size-limit": [
    {
      "name": "Client (ESM)",
      "path": "dist/index.js",
      "limit": "4 kB",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "Parsers (ESM)",
      "path": "dist/parsers.js",
      "limit": "1 kB"
    }
  ]
}
