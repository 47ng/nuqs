{
  "$schema": "https://turbo.build/schema.v2.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build", "nuqs#build:size-json"],
      "env": [
        "VERCEL_ENV",
        "VERCEL_URL",
        "VERCEL_PROJECT_PRODUCTION_URL",
        "ENABLE_SENTRY",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "NEXT_PUBLIC_SENTRY_DSN",
        "GITHUB_TOKEN",
        "ISR_TOKEN"
      ]
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
