{
  "$schema": "https://turbo.build/schema.v2.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"],
      "env": [
        "BASE_PATH",
        "REACT_COMPILER",
        "CACHE_COMPONENTS",
        "E2E_NO_CACHE_ON_RERUN"
      ]
    },
    "test": {
      "outputs": [".playwright/**"],
      "dependsOn": ["build"],
      "env": [
        "BASE_PATH",
        "REACT_COMPILER",
        "CACHE_COMPONENTS",
        "E2E_NO_CACHE_ON_RERUN"
      ]
    }
  }
}
