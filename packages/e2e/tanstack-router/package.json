{
  "name": "e2e-tanstack-router",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3004",
    "build": "vite build",
    "start": "vite preview --port 3004",
    "pretest": "cypress install && playwright install chromium",
    "test": "pnpm run test:types && pnpm run test:playwright && pnpm run test:cypress",
    "test:types": "tsc",
    "test:playwright": "playwright test --project=chromium",
    "test:cypress": "start-server-and-test start http://localhost:3004 cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cross-env FORCE_COLOR=3 cypress run --headless && pnpm run kill-server",
    "kill-server": "lsof -ti:3004 | xargs kill -9 || true"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.131.27",
    "@tanstack/react-router-devtools": "^1.131.27",
    "@tanstack/router-plugin": "^1.131.27",
    "nuqs": "workspace:*",
    "react": "catalog:react19",
    "react-dom": "catalog:react19"
  },
  "devDependencies": {
    "@playwright/test": "catalog:e2e",
    "@types/node": "^24.3.0",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "^5.0.1",
    "cross-env": "^10.0.0",
    "cypress": "catalog:e2e",
    "e2e-shared": "workspace:*",
    "start-server-and-test": "catalog:e2e",
    "typescript": "^5.9.2",
    "vite": "^7.1.11"
  }
}
