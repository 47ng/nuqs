{
  "name": "e2e-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev --port 3003",
    "start": "cross-env NODE_ENV=production PORT=3003 remix-serve ./build/server/index.js",
    "pretest": "cypress install && playwright install chromium",
    "test": "pnpm run test:types && pnpm run test:playwright && pnpm run test:cypress",
    "test:types": "tsc",
    "test:playwright": "playwright test --project=chromium",
    "test:cypress": "start-server-and-test start http://localhost:3003 cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cross-env FORCE_COLOR=3 cypress run --headless"
  },
  "dependencies": {
    "@remix-run/node": "^2.17.0",
    "@remix-run/react": "^2.17.0",
    "@remix-run/serve": "^2.17.0",
    "isbot": "^5.1.30",
    "nuqs": "workspace:*",
    "react": "catalog:react19",
    "react-dom": "catalog:react19"
  },
  "devDependencies": {
    "@playwright/test": "catalog:e2e",
    "@remix-run/dev": "^2.17.0",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "cross-env": "^10.0.0",
    "cypress": "catalog:e2e",
    "e2e-shared": "workspace:*",
    "start-server-and-test": "catalog:e2e",
    "typescript": "^5.9.2",
    "vite": "^7.1.11",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
