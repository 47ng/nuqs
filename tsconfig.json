{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017", // Transpile optional chaining operator
    "module": "ESNext", // allow top-level await
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
